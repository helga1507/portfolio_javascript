{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@apps/*": ["src/apps/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@core/*": ["src/core/*"],
      "@store/*": ["src/store/*"],
      "@icons/*": ["public/icons/*"],
      "@icons": ["public/icons/index.ts"]
    }
  },
  "exclude": ["node_modules"]
}